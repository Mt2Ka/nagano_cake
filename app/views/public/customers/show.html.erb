<div class="container">
  <h4 class="ml-4">マイページ</h4>

<div class="row pb-3 pl-3">
  <h5><strong>登録情報</strong></h5>
    <div class="col-auto">
    <%= link_to edit_path,method: :get do %>
      <button type="button" class="btn btn-sm btn-success">編集する</button>
    <% end %>
    </div>
</div>
<div class="row">
  <div class="col-6">
    <table class="table table-bordered border-dark">
      <th class="table-active">氏名</th>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <th class="table-active">カナ</th>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th class="table-active">郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th class="table-active">住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th class="table-active">電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th class="table-active">メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    </table>
  </div>
</div>
<div class="row pl-3">
  <h5 class="pb-2 pr-4"><strong>配送先</strong></h5>
    <%= link_to addresses_path,method: :get do %>
      <button type="button" class="btn btn-sm btn-primary">一覧を見る</button>
    <% end %>
</div>

<div class="row pl-3">
  <h5 class="pb-2 pr-4"><strong>注文履歴</strong></h5>
    <%= link_to orders_path,method: :get do %>
      <button type="button" class="btn btn-sm btn-primary">一覧を見る</button>
    <% end %>
</div>


