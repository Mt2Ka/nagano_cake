<div class="container">
  <h4 class="pt-5 pb-4"><strong>新規会員登録</strong></h4>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

  <div class="row pl-5 pt-4">
    <div class="col-2 pl-1">
      <%= f.label :氏名 %>
    </div>
    <div class="col-9 pl-4 ml-3">
     （姓）<%= f.text_field :last_name %>
     （名）<%= f.text_field :first_name %></br>
    </div>
  </div>

  <div class="row pl-5 pt-2">
    <div class="col-2 pl-1">
      <%= f.label :フリガナ %>
    </div>
    <div class="col-9 pl-4">
      （セイ）<%= f.text_field :last_name_kana %>
      （メイ）<%= f.text_field :first_name_kana %></br>    
    </div>
  </div>
  
  <div class="row pl-5 pt-2">
    <div class="col-3 pl-1">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-9 pl-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %></br>  
    </div>
  </div>
  
  <div class="row pl-5 pt-2">
    <div class="col-3 pl-1">
      <%= f.label :郵便番号（ハイフンなし） %>
    </div>
    <div class="col-9">
      <%= f.text_field :postal_code %></br>
    </div>
  </div>
  
  <div class="row pl-5 pt-2">
    <div class="col-3 pl-1">
      <%= f.label :住所 %>
    </div>
    <div class="col-9">
      <%= f.text_field :address %></br>
    </div>
  </div>
  
  <div class="row pl-5 pt-2">
    <div class="col-3 pl-1">
      <%= f.label :電話番号（ハイフンなし） %>
    </div>
    <div class="col-9">
      <%= f.text_field :telephone_number %></br>
    </div>
  </div>
  
  <div class="row pl-5 pt-2">
    <div class="col-2 pl-1">
      <%= f.label :パスワード %>
    </div>
    <div class="col-8 pl-0">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %></br>
    </div>
  </div>
  
  <div class="row pl-5 pt-2">
    <div class="col-3 pl-1">
      <%= f.label :パスワード（確認用） %>
    </div>
    <div class="col-9">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %></br>
    </div>
  </div>

  <div class="container center_block" style="width:25rem;">
    <div class="row pt-3">
      <div class="col-5">
        <button class="btn btn-success" type="submit">新規登録</button>           
      </div>
    </div>
  </div>
  <% end %>
  
  <h4 class="pt-4 pb-4"><strong>既に登録済みの方</strong></h4>
    <%= link_to "こちら",new_customer_session_path %> からログインしてください。
  
</div>




