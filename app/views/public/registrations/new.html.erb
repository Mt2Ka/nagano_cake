<div class="container">
  <h4 class="pt-5 pb-4"><strong>新規会員登録</strong></h4>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

  <div class="row pl-3">
    <div class="col-2 pl-1 mr-2">
      <span>氏名</span>
    </div>
    <div class="col-xs-2 pl-5">
      <%= f.label :（姓）, class:"control-label" %>
    </div>
    <div class="col-xs-2">
      <%= f.text_field :last_name, class:"form-control" %>
    </div>
    <div class="col-xs-2 pl-4"> 
      <%= f.label :（名）,class:"control-label" %>
    </div>
    <div class="col-xs-3">
      <%= f.text_field :first_name, class:"form-control" %>
    </div>
  </div>

  <div class="row pl-3 pt-2">
    <div class="col-2 pl-1 mr-3">
      <span>フリガナ</span>
    </div>
    <div class="col-xs-2 pl-4">
      <%= f.label :（セイ）, class:"control-label" %>
    </div>
    <div class="col-xs-2">
      <%= f.text_field :last_name_kana, class:"form-control" %>
    </div>
    <div class="col-xs-2 pl-2">
      <%= f.label :（メイ）, class:"control-label" %>
    </div>
    <div class="col-xs-2">
      <%= f.text_field :first_name_kana, class:"form-control" %></br>    
    </div>
  </div>
  
  <div class="row pl-3 pt-2">
    <div class="col-3 pl-1">
      <%= f.label :メールアドレス, class:"control-label" %>
    </div>
    <div class="col-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></br>  
    </div>
  </div>
  
  <div class="row pl-3 pt-2">
    <div class="col-3 pl-1">
      <%= f.label :郵便番号（ハイフンなし）, class:"control-label" %>
    </div>
    <div class="col-3">
      <%= f.text_field :postal_code, class:"form-control" %></br>
    </div>
  </div>
  
  <div class="row pl-3 pt-2">
    <div class="col-3 pl-1">
      <%= f.label :住所, class:"control-label" %>
    </div>
    <div class="col-7">
      <%= f.text_field :address, class:"form-control" %></br>
    </div>
  </div>
  
  <div class="row pl-3 pt-2">
    <div class="col-3 pl-1">
      <%= f.label :電話番号（ハイフンなし）, class:"control-label" %>
    </div>
    <div class="col-3">
      <%= f.text_field :telephone_number, class:"form-control" %></br>
    </div>
  </div>
  
  <div class="row pl-3 pt-2">
    <div class="col-3 pl-1">
      <%= f.label :パスワード, class:"control-label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
    </div>
    <div class="col-3">
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %></br>
    </div>
  </div>
  
  <div class="row pl-3 pt-2">
    <div class="col-3 pl-1">
      <%= f.label :パスワード（確認用）, class:"control-label" %>
    </div>
    <div class="col-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %></br>
    </div>
  </div>

  <div class="container center_block" style="width:25rem;">
    <div class="row pt-3">
      <div class="col-5">
        <button class="btn btn-success" type="submit">新規登録</button>           
      </div>
    </div>
  </div>
  <% end %>
  
  <h4 class="pt-4 pb-4"><strong>既に登録済みの方</strong></h4>
    <%= link_to "こちら",new_customer_session_path %> からログインしてください。
  
</div>




