<div class="container">
  <h5 class="pt-2 ml-4 pl-3"><strong>配送先編集</strong></h5>
  <%= form_with model:@address,url:address_path(@address),method: :patch do |f| %>
  <div class="row pt-3">
    <div class="col-3">
      <%= f.label :郵便番号（ハイフンなし） %>
    </div>
    <div class="col-9">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row pt-1">
    <div class="col-3">
      <%= f.label :住所 %>
    </div>
    <div class="col-9">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="row pt-1 pb-3">
    <div class="col-3">
      <%= f.label :宛名 %>
    </div>
    <div class="col-4">
      <%= f.text_field :name %>
    </div>
    <div class="col-2 pt-1">
     <button class="btn btn-sm btn-success" type="submit">変更内容を保存</button></br>
    </div>
  </div>
  <% end %>
</div>
