<div class="container">
  <h5 class="pt-2 ml-4 pl-3"><strong>配送先登録/一覧</strong></h5>
  <%= form_with model:@address,url:addresses_path,method: :post do |f| %>
  <div class="row pt-3">
    <div class="col-3">
      <%= f.label :郵便番号（ハイフンなし） %>
    </div>
    <div class="col-9">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row pt-1">
    <div class="col-3">
      <%= f.label :住所 %>
    </div>
    <div class="col-9">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="row pt-1 pb-3">
    <div class="col-3">
      <%= f.label :宛名 %>
    </div>
    <div class="col-4">
      <%= f.text_field :name %>
    </div>
    <div class="col-2 pt-1">
     <button class="btn btn-sm btn-success" type="submit">新規登録</button></br>
    </div>
  </div>
  <% end %>

<div class="row pb-3 pt-4">
  <div class="col-9">
    <table class="table table-bordered border-dark">
      <thead>
        <tr>
          <th class="table-active">郵便番号</th>
          <th class="table-active">住所</th>
          <th class="table-active">宛名</th>
          <th class="table-active"></th>
        </tr>
      </thead>

      <tbody>
      <% @addresses .each do |address| %>
        <tr>
          <td><span><%= address.postal_code %></span></td>
          <td><span><%= address.address %></span></td>
          <td><span><%= address.name %></span></td>
          <td>
            <span class="pl-3">
              <%= link_to edit_address_path(address.id),method: :get do %>
                <button type="button" class="btn btn-sm btn-success">編集する</button>
              <% end %>
            </span>
            <span class="pl-2">
              <%= link_to address_path(address.id),method: :delete do %>
                <button type="button" class="btn btn-sm btn-danger">削除する</button>
              <% end %>
            </span>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
